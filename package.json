{
  "name": "crud-express",
  "version": "0.1.0",
  "description": "A CRUD example using expressjs",
  "main": "index.js",
  "scripts": {
    "start": "nodemon index.ts",
    "test": "jest --detectOpenHandles",
    "coverage": "jest -- --coverage --detectOpenHandles"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/out/",
      "/coverage/",
      "/database/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 100,
        "lines": 80,
        "statements": 80
      }
    },
    "verbose": true,
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/out/",
      "/coverage/",
      "/database/"
    ]
  },
  "author": "Axel Navarro (navarroaxel@gmail.com)",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.0",
    "express": "^4.18.1",
    "mongoose": "^6.3.5",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/mongodb-memory-server": "^2.3.0",
    "@types/sinon": "^10.0.13",
    "jest": "^28.1.3",
    "mockgoose": "^8.0.4",
    "mockingoose": "^2.15.2",
    "mongodb-memory-server": "^8.8.0",
    "nodemon": "^2.0.19",
    "sinon": "^14.0.0",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
